@using Utilities.Extensions
@using Utilities.Generics
@model PaginatedList<Item>
@{
    ViewData["Title"] = "Home Page";
    string url = "Merhaba dünya, bu test arayüzünün index sayfasıdır.".ToUrl();
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <p>Merhaba dünya, bu test arayüzünün index sayfasıdır.</p>
    <p>@url</p>
    <email address="aribilgiogr@gmail.com"></email>
    <email address="aribilgiogr@gmail.com" display="İlker Turan"></email>
    <tel number="1234567891"></tel>
    <form-floating label="Hello" for="hello"></form-floating>
    <ul>
        @foreach (var item in Model.Items)
        {
            <li>@item.Id: @item.Name</li>
        }
    </ul>
    <nav aria-label="...">
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="index" asp-controller="home" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
            }
            @for (int i = Model.Start; i <= Model.End; i++)
            {
                if (Model.CurrentPage == i)
                {
                    <li class="page-item active">
                        <a class="page-link" href="#" aria-current="page">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="index" asp-controller="home" asp-route-page="@i">@i</a></li>
                }
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="index" asp-controller="home" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Next</a>
                </li>
            }

        </ul>
    </nav>
    <hr />
    <pagination page-model="Model" page-action="index"></pagination>
</div>
